<AuFormRow @alignment="default" ...attributes>
  {{#let (unique-id) as  | logSelect |}}
    <AuLabel
      for={{logSelect}}>
      {{t "dashboard.errors.filter.loglevel"}}
    </AuLabel>
    <PowerSelect
      id={{logSelect}}
      @placeholder="INFO, WARN, ERROR"
      @searchEnabled={{true}}
      @search={{perform this.search}}
      @options={{this.options}}
      @selected={{this.selected}}
      @onChange={{this.changeSelected}}
      @allowClear={{true}}
      as |logLevel|>
      {{logLevel.label}}
    </PowerSelect>
  {{/let}}
</AuFormRow>
