<AuFormRow @alignment="default" ...attributes>
  {{#let (unique-id) as  | logSource |}}
    <AuLabel
      for={{logSource}}>
      {{t "dashboard.errors.filter.source"}}
    </AuLabel>
    <PowerSelect
      id={{logSource}}
      @placeholder="Acmidm login service, ..."
      @searchEnabled={{true}}
      @search={{perform this.search}}
      @options={{this.options}}
      @selected={{this.selected}}
      @onChange={{this.changeSelected}}
      @allowClear={{true}}
      as |logSource|>
      {{logSource.label}}
    </PowerSelect>
  {{/let}}
</AuFormRow>
