<AuApp>
  <AuMainHeader @brandLink="https://www.vlaanderen.be/nl" @homeRoute="index" @appTitle="Dashboard" @contactRoute="">
    {{#if this.session.isAuthenticated}}
      <AuButton
        @skin="link"
        @icon="logout"
        @iconAlignment="left"
        {{on "click" this.invalidateSession}}>
        Log out
      </AuButton>
    {{/if}}
  </AuMainHeader>
  {{#if this.session.isAuthenticated}}
    <AuMainContainer as |m|>
      <m.sidebar>
        <div class="au-c-sidebar">
          <div class="au-c-sidebar__content">
            <nav>
              <ul class="au-c-list-navigation">
                <li class="au-c-list-navigation__item">
                  <AuNavigationLink @route="reports">
                    <AuIcon @icon="documents" @alignment="left" />
                    Reports
                  </AuNavigationLink>
                  <AuNavigationLink @route="errors">
                    <AuIcon @icon="alert-triangle" @alignment="left" />
                    Errors
                  </AuNavigationLink>
                  <AuNavigationLink @route="@lblod/ember-jobs-dashboard-engine.index">
                    <AuIcon @icon="gear" @alignment="left" />
                    Jobs
                  </AuNavigationLink>
                </li>
              </ul>
            </nav>
          </div>
        </div>
      </m.sidebar>
      <m.content @scroll={{true}}>
        <div class="au-d-component-block au-d-component-block--overflow">
          {{outlet}}
        </div>
      </m.content>
    </AuMainContainer>
  {{else}}
    {{outlet}}
  {{/if}}
</AuApp>
