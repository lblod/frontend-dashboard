<label class="label--subtle form__label">{{label}}</label>

{{#wu-button-group isInline=true class="button-group__inline--small"}}
  {{wu-button label="All logs" onClick=(action "resetFilter") class=(if (not isFilterEnabled) 'button--active') isAlt=true size="small" isNarrow=true}}
  {{wu-button label="Specific period" onClick=(action "initRangeFilter") class=(if isFilterEnabled 'button--active') isAlt=true size="small" isNarrow=true}}
{{/wu-button-group}}

{{#if isFilterEnabled}}
  <div class="accordion__content">
    {{wu-date-range onChangeFromValue=(action 'updateDate' 'fromDate') onChangeToValue=(action 'updateDate' 'toDate') fromValue=fromDate toValue=toDate fromPlaceholder="01.01.2019" fromMinDate="01.01.2019" fromMaxDate="01.01.2050" toPlaceholder="31.01.2019" toMinDate="01.01.2019" toMaxDate="01.01.2050"}}
  </div>
{{/if}}
